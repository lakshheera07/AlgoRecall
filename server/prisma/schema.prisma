generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Problem {
  id                        Int      @id @default(autoincrement())
  title                     String
  platform                  String
  dataStructure             String   @default("")
  pattern                   String
  difficulty                String
  describeProblemInOwnWords String   @default("")
  brute_force               String?
  better_approach           String?
  optimal_approach          String?
  code                      String?
  nextRevisionAt            DateTime?
  recallLogs                RecallLog[]
  createdAt                 DateTime @default(now())
  updatedAt                 DateTime @updatedAt

  @@map("problems")
}

model RecallLog {
  id         Int      @id @default(autoincrement())
  problemId  Int
  confidence Int
  category   String
  createdAt  DateTime @default(now())

  problem Problem @relation(fields: [problemId], references: [id], onDelete: Cascade)

  @@index([problemId])
  @@map("recall_logs")
}
